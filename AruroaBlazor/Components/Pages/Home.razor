            color: #764ba2;
        }

    /* ===== SONG CARDS ===== */
    .songs-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 16px;
    }

    .home-song-card {
        background: #f8f9fa;
        border: 2px solid #e9ecef;
        border-radius: 12px;
        padding: 16px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: all 0.3s;
    }

        .home-song-card:hover {
            border-color: #667eea;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.15);
        }

    .song-card-title {
        margin: 0 0 6px 0;
        font-size: 15px;
        color: #2c3e50;
        font-weight: 600;
    }

    .song-card-meta {
        margin: 0;
        font-size: 13px;
        color: #7f8c8d;
    }

    /* ===== BUTTONS ===== */
    .btn {
        padding: 12px 24px;
        border: none;
        border-radius: 8px;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }

    .btn-secondary {
        background: rgba(255,255,255,0.2);
        color: white;
        border: 2px solid rgba(255,255,255,0.5);
    }

        .btn-secondary:hover {
            background: rgba(255,255,255,0.3);
            transform: translateY(-2px);
        }

    .btn-small {
        padding: 8px 16px;
        font-size: 13px;
    }

    /* ===== SKELETON LOADING ===== */
    .skeleton-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 16px;
    }

    .skeleton-card {
        height: 80px;
        border-radius: 12px;
        background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
        background-size: 200% 100%;
        animation: shimmer 1.5s ease-in-out infinite;
    }

    /*
            Shimmer animation for skeleton loading cards
            Moves the gradient from right to left to create a "loading" effect
            This tells the user that content is being loaded
        */
    @@keyframes shimmer {
        0%

    {
        background-position: 200% 0;
    }

    100% {
        background-position: -200% 0;
    }

    }

    /* ===== EMPTY STATE ===== */
    .empty-state {
        text-align: center;
        padding: 40px;
        color: #95a5a6;
    }

        .empty-state p {
            margin-bottom: 16px;
            font-size: 16px;
        }

    /* ===== RESPONSIVE ===== */
    @@media (max-width: 768px) {
        .hero-title

    {
        font-size: 32px;
    }

    .stats-section {
        grid-template-columns: repeat(2, 1fr);
    }

    .hero-buttons {
        flex-direction: column;
        align-items: center;
    }

    }
</style>

@code {
    // Service that handles all home page data loading
    private HomeService homeService = new HomeService();

    // Currently logged-in user (null if not logged in)
    private User user = null;

    // Loading state - shows skeleton cards while data loads
    private bool isLoading = true;

    // Data lists for each section
    private List<Song> popularSongs = new List<Song>();
    private List<SongWithRating> topRatedSongs = new List<SongWithRating>();
    private List<Song> newSongs = new List<Song>();

    // Site statistics
    private SiteStats stats = null;

    // Called after component renders - loads all data
    protected override async Task OnAfterRenderAsync(bool first)
    {
        if (first == false)
        {
            return;
        }

        // Show skeleton loading cards while we fetch data
        isLoading = true;
        StateHasChanged();

        // Check if user is logged in
        var result = await Storage.GetAsync<User>("user");
        if (result.Success)
        {
            user = result.Value;
        }
        else
        {
            user = null;
        }

        // Load all sections using the service
        popularSongs = await homeService.GetMostPlayedSongsAsync();
        topRatedSongs = await homeService.GetTopRatedSongsAsync();
        newSongs = await homeService.GetRecentlyUploadedSongsAsync();
        stats = await homeService.GetSiteStatsAsync();

        // Done loading - replace skeleton cards with real content
        isLoading = false;
        StateHasChanged();
    }

    // Navigate to songs page
    private void GoToSongs()
    {
        Nav.NavigateTo("/songs");
    }

    // Format seconds into MM:SS display
    // Example: 125 seconds becomes "2:05"
    private string FormatTime(int seconds)
    {
        int min = seconds / 60;
        int sec = seconds % 60;
        return min + ":" + sec.ToString("D2");
    }
}