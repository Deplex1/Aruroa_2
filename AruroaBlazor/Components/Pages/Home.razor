        .section-header h2 {
            margin: 0;
            font-size: 24px;
            color: #2c3e50;
            font-weight: 600;
        }

    .see-all-link {
        color: #667eea;
        text-decoration: none;
        font-size: 14px;
        font-weight: 600;
        transition: color 0.2s;
    }

