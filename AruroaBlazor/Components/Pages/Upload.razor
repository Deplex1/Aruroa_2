@page "/upload"
@using Models
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@using Services
@inject NavigationManager Nav
@inject ProtectedSessionStorage Storage

<h1>Upload Song</h1>

@if (user == null)
{
    <p>You must be logged in to upload a song.</p>
}
else
{
    <div class="upload-form">
        <div class="form-group">
            <label for="title">Song Title</label>
            <input id="title" placeholder="Enter song title" @bind="title" />
        </div>

        <div class="form-group">
            <label>Genres (Select multiple)</label>
            <div class="genre-checkboxes">
                @for (int i = 0; i < availableGenres.Count; i++)
                {
                    int index = i;
                    Genre currentGenre = availableGenres[index];
                    bool isChecked = IsGenreSelected(currentGenre.genreid);

                    <div class="genre-checkbox-item">
                        <input type="checkbox"
                               id="genre-@currentGenre.genreid"
                               checked="@isChecked"
                               @onchange="(e) => ToggleGenre(currentGenre.genreid, e)" />
                        <label for="genre-@currentGenre.genreid">@currentGenre.name</label>
                    </div>
                }
            </div>
        </div>

        <div class="form-group">
            <label for="audioFile">Audio File</label>
            <InputFile id="audioFile" OnChange="OnFileSelected" accept="audio/*" />
            @if (selectedFile != null)
            {
                <p class="file-info">Selected: @selectedFile.Name (@FormatFileSize(selectedFile.Size))</p>
            }
        </div>

        <button @onclick="UploadSong" disabled="@(isUploading)" class="btn">
            @if (isUploading)
            {
                <span>Uploading...</span>
            }
            else
            {
                <span>Upload Song</span>
            }
        </button>

        @if (!string.IsNullOrEmpty(message))
        {
            <div class="message @(message.Contains("success") ? "message-success" : "message-error")">
                @message
            </div>
        }
    </div>
}

<style>
    .genre-checkboxes {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        margin-top: 10px;
    }

    .genre-checkbox-item {
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .genre-checkbox-item input[type="checkbox"] {
        cursor: pointer;
    }

    .genre-checkbox-item label {
        cursor: pointer;
        user-select: none;
    }
</style>

@code {
    // Service instances
    private SongUploadService uploadService = new SongUploadService();
    private UIHelperService uiHelper = new UIHelperService();

    // UI state variables
    private User? user;
    private IBrowserFile? selectedFile;
    private string title = "";
    private string message = "";
    private bool isUploading = false;
    private List<int> selectedGenreIds = new List<int>();
    private List<Genre> availableGenres = new List<Genre>();

    // Lifecycle method - loads data on first render
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        // Only load data on the FIRST render to avoid infinite loops
        if (firstRender == false)
        {
            return;
        }

        // Check if user is logged in by reading from protected session storage
        var result = await Storage.GetAsync<User>("user");
        if (result.Success)
        {
            user = result.Value;
            await LoadGenres();
            StateHasChanged();
        }
        else
        {
            user = null;
            availableGenres = new List<Genre>();
            StateHasChanged();
        }
    }

    // Load all available genres from the database using service
    private async Task LoadGenres()
    {
        availableGenres = await uploadService.LoadGenresAsync();
    }

    // Check if a specific genre is currently selected
    private bool IsGenreSelected(int genreId)
    {
        // Loop through selected genres to see if this one is checked
        for (int i = 0; i < selectedGenreIds.Count; i++)
        {
            if (selectedGenreIds[i] == genreId)
            {
                return true;
            }
        }
        return false;
    }

    // Toggle a genre on/off when user clicks checkbox
    private void ToggleGenre(int genreId, ChangeEventArgs e)
    {
        // Get the checkbox value (true = checked, false = unchecked)
        bool isChecked = false;
        if (e.Value != null)
        {
            isChecked = (bool)e.Value;
        }

        if (isChecked)
        {
            // Add genre to list if not already there
            if (IsGenreSelected(genreId) == false)
            {
                selectedGenreIds.Add(genreId);
            }
        }
        else
        {
            // Remove genre from list
            for (int i = 0; i < selectedGenreIds.Count; i++)
            {
                if (selectedGenreIds[i] == genreId)
                {
                    selectedGenreIds.RemoveAt(i);
                    break;
                }
            }
        }

        StateHasChanged();
    }

    // Called when user selects an audio file
    private void OnFileSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        StateHasChanged();
    }

    // Format file size using UI helper service
    private string FormatFileSize(long bytes)
    {
        return uiHelper.FormatFileSize(bytes);
    }

    // Main upload function - validates input and saves to database
    private async Task UploadSong()
    {
        // Validate upload using service
        string validationError = uploadService.ValidateUpload(user, title, selectedGenreIds, selectedFile);
        if (validationError != null)
        {
            message = validationError;
            StateHasChanged();
            return;
        }

        // Show loading state
        isUploading = true;
        StateHasChanged();

        // Perform upload using service
        bool success = await uploadService.UploadSongAsync(user, title, selectedGenreIds, selectedFile);

        if (success)
        {
            message = "Song uploaded successfully!";

            // Clear form
            title = "";
            selectedFile = null;
            selectedGenreIds.Clear();

            StateHasChanged();

            // Navigate to songs page after 2 seconds
            await Task.Delay(2000);
            Nav.NavigateTo("/songs");
        }
        else
        {
            message = "Upload failed. Please try again.";
        }

        // Hide loading state
        isUploading = false;
        StateHasChanged();
    }
}