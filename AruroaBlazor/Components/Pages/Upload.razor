@page "/upload"
@using Models
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@using Services
@inject NavigationManager Nav
@inject ProtectedSessionStorage Storage

<h1>Upload Song</h1>

@if (user == null)
{
    <p>You must be logged in to upload a song.</p>
}
else
{
    <div class="upload-form">
        <div class="form-group">
            <label for="title">Song Title</label>
            <input id="title" placeholder="Enter song title" @bind="title" />
        </div>

        <div class="form-group">
            <label>Genres (Select multiple)</label>
            <div class="genre-checkboxes">
                @for (int i = 0; i < availableGenres.Count; i++)
                {
                    int index = i;
                    Genre currentGenre = availableGenres[index];
                    bool isChecked = IsGenreSelected(currentGenre.genreid);

                    <div class="genre-checkbox-item">
                        <input type="checkbox"
                               id="genre-@currentGenre.genreid"
                               checked="@isChecked"
                               @onchange="(e) => ToggleGenre(currentGenre.genreid, e)" />
                        <label for="genre-@currentGenre.genreid">@currentGenre.name</label>
                    </div>
                }
                <div class="request-genre-box">
                    <label>Can't find your genre?</label>
                    <input placeholder="Request new genre..." @bind="requestedGenreName" />
                    <button class="btn btn-secondary" @onclick="RequestGenre" disabled="@isRequesting">
                        @if (isRequesting)
                        {
                            <span>Sending...</span>
                        }
                        else
                        {
                            <span>Request Genre</span>
                        }
                    </button>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="audioFile">Audio File</label>
            <InputFile id="audioFile" OnChange="OnFileSelected" accept="audio/*" />
            @if (selectedFile != null)
            {
                <p class="file-info">Selected: @selectedFile.Name (@FormatFileSize(selectedFile.Size))</p>
            }
        </div>

        <button @onclick="UploadSong" disabled="@(isUploading)" class="btn">
            @if (isUploading)
            {
                <span>Uploading...</span>
            }
            else
            {
                <span>Upload Song</span>
            }
        </button>

        @if (!string.IsNullOrEmpty(message))
        {
            <div class="message @(message.Contains("success") ? "message-success" : "message-error")">
                @message
            </div>
        }
    </div>
}

<style>
    /* ---- Upload Page Layout ---- */
    .upload-form {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
        background-color: #111827;
        border-radius: 14px;
        border: 1px solid #374151;
        box-shadow: 0 20px 40px rgba(0,0,0,0.45);
        animation: fadeIn 0.3s ease;
    }

    h1 {
        text-align: center;
        margin-bottom: 2rem;
        letter-spacing: 1px;
    }

    /* ---- Inputs ---- */
    .upload-form input[type="text"],
    .upload-form input:not([type]) {
        background-color: #020617;
        border: 2px solid #1f2937;
        transition: all 0.2s ease;
    }

    .upload-form input:focus {
        border-color: #3b82f6;
        background-color: #020617;
    }

    /* ---- Genre Selection ---- */
    .genre-checkboxes {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 12px;
        padding: 12px;
        background-color: #020617;
        border-radius: 10px;
        border: 1px solid #1f2937;
    }

    /* Hide ugly checkbox */
    .genre-checkbox-item input[type="checkbox"] {
        display: none;
    }

    /* Make label look like a selectable chip */
    .genre-checkbox-item label {
        padding: 8px 14px;
        border-radius: 999px;
        background-color: #1f2937;
        border: 1px solid #374151;
        color: #cbd5e1;
        cursor: pointer;
        font-size: 13px;
        transition: all 0.18s ease;
    }

        /* Hover */
        .genre-checkbox-item label:hover {
            border-color: #3b82f6;
            color: #3b82f6;
            transform: translateY(-1px);
        }

    /* Checked state */
    .genre-checkbox-item input[type="checkbox"]:checked + label {
        background-color: #3b82f6;
        border-color: #3b82f6;
        color: white;
        box-shadow: 0 4px 12px rgba(59,130,246,0.35);
    }

    /* ---- Request Genre Box ---- */
    .request-genre-box {
        width: 100%;
        margin-top: 12px;
        padding-top: 12px;
        border-top: 1px solid #1f2937;
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        align-items: center;
    }

        .request-genre-box input {
            flex: 1;
            min-width: 180px;
        }

    /* ---- File Picker ---- */
    input[type="file"] {
        background-color: #020617;
        border: 2px dashed #374151;
        padding: 20px;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.2s ease;
    }

        input[type="file"]:hover {
            border-color: #3b82f6;
        }

    .file-info {
        margin-top: 8px;
        color: #9ca3af;
        font-size: 13px;
    }

    /* ---- Buttons ---- */
    .btn {
        margin-top: 10px;
        font-size: 15px;
        letter-spacing: 0.3px;
    }

    button:disabled {
        opacity: 0.6;
        cursor: not-allowed;
        transform: none;
        box-shadow: none;
    }

    /* ---- Message ---- */
    .message {
        margin-top: 18px;
        animation: fadeIn 0.25s ease;
    }

    /* ---- Animation ---- */
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(6px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

@code {
    // Service instances
    private SongUploadService uploadService = new SongUploadService();
    private UIHelperService uiHelper = new UIHelperService();

    // UI state variables
    private User? user;
    private IBrowserFile? selectedFile;
    private string title = "";
    private string message = "";
    private bool isUploading = false;
    private List<int> selectedGenreIds = new List<int>();
    private List<Genre> availableGenres = new List<Genre>();
    private string requestedGenreName = "";
    private bool isRequesting = false;

    // Use the service (just like admin page does)
    private GenreRequestService genreRequestService = new GenreRequestService();




    // Lifecycle method - loads data on first render
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        // Only load data on the FIRST render to avoid infinite loops
        if (firstRender == false)
        {
            return;
        }

        // Check if user is logged in by reading from protected session storage
        var result = await Storage.GetAsync<User>("user");
        if (result.Success)
        {
            user = result.Value;
            await LoadGenres();
            StateHasChanged();
        }
        else
        {
            user = null;
            availableGenres = new List<Genre>();
            StateHasChanged();
        }
    }

    // Load all available genres from the database using service
    private async Task LoadGenres()
    {
        availableGenres = await uploadService.LoadGenresAsync();
    }

    // Check if a specific genre is currently selected
    private bool IsGenreSelected(int genreId)
    {
        // Loop through selected genres to see if this one is checked
        for (int i = 0; i < selectedGenreIds.Count; i++)
        {
            if (selectedGenreIds[i] == genreId)
            {
                return true;
            }
        }
        return false;
    }

    // Toggle a genre on/off when user clicks checkbox
    private void ToggleGenre(int genreId, ChangeEventArgs e)
    {
        // Get the checkbox value (true = checked, false = unchecked)
        bool isChecked = false;
        if (e.Value != null)
        {
            isChecked = (bool)e.Value;
        }

        if (isChecked)
        {
            // Add genre to list if not already there
            if (IsGenreSelected(genreId) == false)
            {
                selectedGenreIds.Add(genreId);
            }
        }
        else
        {
            // Remove genre from list
            for (int i = 0; i < selectedGenreIds.Count; i++)
            {
                if (selectedGenreIds[i] == genreId)
                {
                    selectedGenreIds.RemoveAt(i);
                    break;
                }
            }
        }

        StateHasChanged();
    }

    // Called when user selects an audio file
    private void OnFileSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        StateHasChanged();
    }

    // Format file size using UI helper service
    private string FormatFileSize(long bytes)
    {
        return uiHelper.FormatFileSize(bytes);
    }

    // Main upload function - validates input and saves to database
    private async Task UploadSong()
    {
        // Validate upload using service
        string validationError = uploadService.ValidateUpload(user, title, selectedGenreIds, selectedFile);
        if (validationError != null)
        {
            message = validationError;
            StateHasChanged();
            return;
        }

        // Show loading state
        isUploading = true;
        StateHasChanged();

        // Perform upload using service
        bool success = await uploadService.UploadSongAsync(user, title, selectedGenreIds, selectedFile);

        if (success)
        {
            message = "Song uploaded successfully!";

            // Clear form
            title = "";
            selectedFile = null;
            selectedGenreIds.Clear();

            StateHasChanged();

            // Navigate to songs page after 2 seconds
            await Task.Delay(2000);
            Nav.NavigateTo("/songs");
        }
        else
        {
            message = "Upload failed. Please try again.";
        }

        // Hide loading state
        isUploading = false;
        StateHasChanged();
    }

    private async Task RequestGenre()
    {
        if (user == null)
        {
            message = "Login required.";
            return;
        }

        bool success = await genreRequestService.CreateRequestAsync(user.userid, requestedGenreName);

        if (success)
        {
            message = "Request sent for admin approval.";
            requestedGenreName = "";
        }
        else
        {
            message = "Failed to send request.";
        }
    }
    

}