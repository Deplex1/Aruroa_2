@page "/upload"
@using DBL
@using Models
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@using SongManagment
@inject NavigationManager Nav
@inject ProtectedSessionStorage Storage

<h1>Upload Song</h1>

@if (user == null)
{
    <p>You must be logged in to upload a song.</p>
}
else
{
    <div class="upload-form">
        <div class="form-group">
            <label for="title">Song Title</label>
            <input id="title" placeholder="Enter song title" @bind="title" />
        </div>

        <div class="form-group">
            <label>Genres (Select multiple)</label>
            <div class="genre-checkboxes">
                @for (int i = 0; i < availableGenres.Count; i++)
                {
                    int index = i;
                    Genre currentGenre = availableGenres[index];
                    bool isChecked = IsGenreSelected(currentGenre.genreid);

                    <div class="genre-checkbox-item">
                        <input type="checkbox"
                               id="genre-@currentGenre.genreid"
                               checked="@isChecked"
                               @onchange="(e) => ToggleGenre(currentGenre.genreid, e)" />
                        <label for="genre-@currentGenre.genreid">@currentGenre.name</label>
                    </div>
                }
            </div>
        </div>

        <div class="form-group">
            <label for="audioFile">Audio File</label>
            <InputFile id="audioFile" OnChange="OnFileSelected" accept="audio/*" />
            @if (selectedFile != null)
            {
                <p class="file-info">Selected: @selectedFile.Name (@FormatFileSize(selectedFile.Size))</p>
            }
        </div>

        <button @onclick="UploadSong" disabled="@(isUploading)" class="btn">
            @if (isUploading)
            {
                <span>Uploading...</span>
            }
            else
            {
                <span>Upload Song</span>
            }
        </button>

        @if (!string.IsNullOrEmpty(message))
        {
            <div class="message @(message.Contains("success") ? "message-success" : "message-error")">
                @message
            </div>
        }
    </div>
}

<style>
    .genre-checkboxes {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        margin-top: 10px;
    }

    .genre-checkbox-item {
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .genre-checkbox-item input[type="checkbox"] {
        cursor: pointer;
    }

    .genre-checkbox-item label {
        cursor: pointer;
        user-select: none;
    }
</style>

@code {
    private User? user;
    private IBrowserFile? selectedFile;
    private string title = "";
    private string message = "";
    private bool isUploading = false;

    // CHANGED: Instead of a single genre, we now track MULTIPLE selected genres
    private List<int> selectedGenreIds = new List<int>();
    private List<Genre> availableGenres = new List<Genre>();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        // Only load data on the FIRST render to avoid infinite loops
        if (firstRender == false)
        {
            return;
        }

        // Check if user is logged in by reading from protected session storage
        var result = await Storage.GetAsync<User>("user");
        if (result.Success)
        {
            user = result.Value;
            await LoadGenres();
            StateHasChanged();
        }
        else
        {
            user = null;
            availableGenres = new List<Genre>();
            StateHasChanged();
        }
    }

    // Load all available genres from the database
    private async Task LoadGenres()
    {
        try
        {
            GenreDB genreDB = new GenreDB();
            availableGenres = await genreDB.SelectAllGenresAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading genres: {ex.Message}");
        }
    }

    // Check if a specific genre is currently selected
    private bool IsGenreSelected(int genreId)
    {
        // Loop through selected genres to see if this one is checked
        for (int i = 0; i < selectedGenreIds.Count; i++)
        {
            if (selectedGenreIds[i] == genreId)
            {
                return true;
            }
        }
        return false;
    }

    // Toggle a genre on/off when user clicks checkbox
    private void ToggleGenre(int genreId, ChangeEventArgs e)
    {
        // Get the checkbox value (true = checked, false = unchecked)
        bool isChecked = false;
        if (e.Value != null)
        {
            isChecked = (bool)e.Value;
        }

        if (isChecked)
        {
            // Add genre to list if not already there
            if (IsGenreSelected(genreId) == false)
            {
                selectedGenreIds.Add(genreId);
            }
        }
        else
        {
            // Remove genre from list
            for (int i = 0; i < selectedGenreIds.Count; i++)
            {
                if (selectedGenreIds[i] == genreId)
                {
                    selectedGenreIds.RemoveAt(i);
                    break;
                }
            }
        }

        StateHasChanged();
    }

    // Called when user selects an audio file
    private void OnFileSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        StateHasChanged();
    }

    // Format file size in human-readable format (KB, MB, GB)
    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;

        // Keep dividing by 1024 until we get a reasonable number
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }

        return $"{len:0.##} {sizes[order]}";
    }

    // Main upload function - validates input and saves to database
    private async Task UploadSong()
    {
        // VALIDATION STEP 1: Check if user is logged in
        if (user == null)
        {
            message = "You must be logged in to upload songs.";
            StateHasChanged();
            return;
        }

        // VALIDATION STEP 2: Check if title is provided
        if (string.IsNullOrWhiteSpace(title))
        {
            message = "Please enter a song title.";
            StateHasChanged();
            return;
        }

        // VALIDATION STEP 3: Check if at least one genre is selected
        if (selectedGenreIds.Count == 0)
        {
            message = "Please select at least one genre.";
            StateHasChanged();
            return;
        }

        // VALIDATION STEP 4: Check if file is selected
        if (selectedFile == null)
        {
            message = "Please select an audio file.";
            StateHasChanged();
            return;
        }

        // VALIDATION STEP 5: Check file type (must be audio)
        if (selectedFile.ContentType.StartsWith("audio/") == false)
        {
            message = "Please select a valid audio file.";
            StateHasChanged();
            return;
        }

        // VALIDATION STEP 6: Check file size (maximum 20MB)
        long maxFileSize = 20 * 1024 * 1024; // 20MB in bytes
        if (selectedFile.Size > maxFileSize)
        {
            message = "File size must be less than 20MB.";
            StateHasChanged();
            return;
        }

        // Show loading state
        isUploading = true;
        StateHasChanged();

        try
        {
            // Log upload details for debugging
            Console.WriteLine($"=== UPLOAD START ===");
            Console.WriteLine($"User ID: {user?.userid}");
            Console.WriteLine($"Title: '{title}'");
            Console.WriteLine($"Selected Genres: {string.Join(", ", selectedGenreIds)}");
            Console.WriteLine($"File: {selectedFile?.Name} ({selectedFile?.Size} bytes)");
            Console.WriteLine($"Content Type: {selectedFile?.ContentType}");

            // STEP 1: Read the audio file into memory
            // OpenReadStream allows us to read files up to 20MB
            using var stream = selectedFile.OpenReadStream(maxAllowedSize: 20 * 1024 * 1024);
            using var ms = new MemoryStream();
            await stream.CopyToAsync(ms);

            // Convert the file to a byte array for database storage
            byte[] audioData = ms.ToArray();
            Console.WriteLine($"Audio data size: {audioData.Length} bytes");

            // STEP 2: Calculate the duration of the audio file
            // We use TagLib library (in AudioHelper) to read MP3 metadata
            int duration = await SongManagment.AudioHelper.GetMp3DurationInSeconds(audioData);
            Console.WriteLine($"Calculated duration: {duration} seconds");

            // STEP 3: Create a new Song object
            // NOTE: We DO NOT set genreID anymore - that column was removed!
            Song song = new Song
            {
                title = title.Trim(),
                audioData = audioData,
                userid = user.userid,
                uploaded = DateTime.Now,
                duration = duration,
                plays = 0
            };

            Console.WriteLine($"=== SAVING TO DATABASE ===");
            Console.WriteLine($"Song object created successfully");

            // STEP 4: Insert the song into the database
            SongDB songDB = new SongDB();
            int rows = await songDB.AddSongAsync(song);

            Console.WriteLine($"Database insert result: {rows} rows affected");

            // Check if the insert was successful
            if (rows == 1)
            {
                // STEP 5: Get the ID of the song we just inserted
                // We need this to create the genre relationships
                List<Song> allSongs = await songDB.SelectAllSongsAsync();

                // Find the song we just added (it should be the last one)
                int newSongId = 0;
                for (int i = 0; i < allSongs.Count; i++)
                {
                    if (allSongs[i].title == song.title && allSongs[i].userid == user.userid)
                    {
                        newSongId = allSongs[i].songID;
                    }
                }

                // STEP 6: Add genre relationships to song_genres table
                if (newSongId > 0)
                {
                    SongGenreDB songGenreDB = new SongGenreDB();

                    // Loop through all selected genres and create relationships
                    for (int i = 0; i < selectedGenreIds.Count; i++)
                    {
                        int genreId = selectedGenreIds[i];
                        await songGenreDB.AddSongGenreAsync(newSongId, genreId);
                        Console.WriteLine($"Added genre {genreId} to song {newSongId}");
                    }
                }

                message = "Song uploaded successfully!";
                Console.WriteLine($"=== UPLOAD SUCCESS ===");

                // Clear form
                title = "";
                selectedFile = null;
                selectedGenreIds.Clear();

                // Navigate to songs page after 2 seconds
                await Task.Delay(2000);
                Nav.NavigateTo("/songs");
            }
            else
            {
                message = "Error uploading song. Database returned 0 rows affected.";
                Console.WriteLine($"=== UPLOAD FAILED: Database returned 0 rows ===");
            }
        }
        catch (Exception ex)
        {
            // If anything goes wrong, show error message
            message = $"Upload failed: {ex.Message}";
            Console.WriteLine($"=== UPLOAD FAILED ===");
            Console.WriteLine($"Exception: {ex.GetType().Name}");
            Console.WriteLine($"Message: {ex.Message}");
            Console.WriteLine($"Stack Trace: {ex.StackTrace}");

            if (ex.InnerException != null)
            {
                Console.WriteLine($"Inner Exception: {ex.InnerException.Message}");
            }

            Console.WriteLine($"=== END OF ERROR ===");
        }
        finally
        {
            // Always hide loading state when done
            isUploading = false;
            StateHasChanged();
        }
    }
}