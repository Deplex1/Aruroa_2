    // Current logged-in user
    private User? user;

    // List of all genres from database
    private List<Genre> genres = new List<Genre>();

    // Name of new genre being added
    private string newGenreName = "";

    // Message to display to user (success/error/warning)
    private string message = "";

    // CSS class for message styling
    private string messageClass = "";

    // Loading and saving states
    private bool isSaving = false;
    private bool isLoading = false;
    private bool isDeleting = false;

    // Genre selected for deletion (null means no deletion in progress)
    private Genre? genreToDelete = null;

    // Called when component first renders
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender == false)
        {
            return;
        }

        // Check if user is logged in
        var result = await Storage.GetAsync<User>("user");
        if (result.Success == true)
        {
            user = result.Value;
        }
        else
        {
            user = null;
        }

        // Load genres if user is admin
        if (user != null && user.IsAdmin == 1)
        {
            await LoadGenres();
        }

        StateHasChanged();
    }

    // Load all genres from database
    private async Task LoadGenres()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            GenreDB genreDB = new GenreDB();
            List<Genre> dbGenres = await genreDB.SelectAllGenresAsync();

            genres.Clear();
            for (int i = 0; i < dbGenres.Count; i++)
            {
                genres.Add(dbGenres[i]);
            }
        }
        catch (Exception ex)
        {
            ShowMessage("Error loading genres: " + ex.Message, "error");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    // Add a new genre to the database
    private async Task AddGenre()
    {
        // Prevent double-clicking
        if (isSaving == true)
        {
            return;
        }

        // Validate input
        if (string.IsNullOrWhiteSpace(newGenreName))
        {
            ShowMessage("Genre name cannot be empty", "error");
            return;
        }

        // Trim and capitalize first letter
        string trimmedName = newGenreName.Trim();

        // Check for duplicates (case-insensitive)
        bool isDuplicate = false;
        for (int i = 0; i < genres.Count; i++)
        {
            if (genres[i].name.ToLower() == trimmedName.ToLower())
            {
                isDuplicate = true;
                break;
            }
        }

        if (isDuplicate)
        {
            ShowMessage("Genre '" + trimmedName + "' already exists!", "warning");
            return;
        }

        // Validate length
        if (trimmedName.Length < 2)
        {
            ShowMessage("Genre name must be at least 2 characters long", "error");
            return;
        }

        if (trimmedName.Length > 50)
        {
            ShowMessage("Genre name must be less than 50 characters", "error");
            return;
        }

        isSaving = true;
        StateHasChanged();

        try
        {
            GenreDB genreDB = new GenreDB();
            int rows = await genreDB.AddGenreAsync(trimmedName);

            if (rows == 1)
            {
                ShowMessage("Genre '" + trimmedName + "' added successfully!", "success");
                newGenreName = "";
                await LoadGenres();

                // Clear success message after 3 seconds
                await Task.Delay(3000);
                if (messageClass == "message-success")
                {
                    message = "";
                    StateHasChanged();
                }
            }
            else
            {
                ShowMessage("Failed to add genre. Please try again.", "error");
            }
        }
        catch (Exception ex)
        {
            ShowMessage("Error: " + ex.Message, "error");
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    // Show confirmation modal before deleting
    private void ConfirmDelete(Genre genre)
    {
        genreToDelete = genre;
        StateHasChanged();
    }

    // Cancel delete operation
    private void CancelDelete()
    {
        genreToDelete = null;
        StateHasChanged();
    }

    // Delete the genre from database
    private async Task DeleteGenre()
    {
        if (genreToDelete == null)
        {
            return;
        }

        isDeleting = true;
        StateHasChanged();

        try
        {
            // NOTE: This will fail if there are songs using this genre
            // due to foreign key constraints in song_genres table
            // That's actually GOOD - it prevents data corruption!

            GenreDB genreDB = new GenreDB();

            // We need to add a delete method to GenreDB
            // For now, we'll use the base delete functionality
            Dictionary<string, object> filter = new Dictionary<string, object>();
            filter.Add("genreid", genreToDelete.genreid);

            // This won't work because DeleteAsync is protected!
            // We need to add a public method in GenreDB

            ShowMessage("Delete functionality needs to be implemented in GenreDB", "warning");

            // TODO: Add DeleteGenreAsync method to GenreDB.cs
        }
        catch (Exception ex)
        {
            if (ex.Message.Contains("foreign key") || ex.Message.Contains("constraint"))
            {
                ShowMessage("Cannot delete '" + genreToDelete.name + "' - it is being used by existing songs!", "error");
            }
            else
            {
                ShowMessage("Error deleting genre: " + ex.Message, "error");
            }
        }
        finally
        {
            isDeleting = false;
            genreToDelete = null;
            StateHasChanged();
        }
    }

    // Handle Enter key press in input field
    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await AddGenre();
        }
    }

    // Navigate to login page
    private void GoToLogin()
    {
        Nav.NavigateTo("/login");
    }

    // Helper method to show messages with appropriate styling
    private void ShowMessage(string text, string type)
    {
        message = text;

        if (type == "success")
        {
            messageClass = "message-success";
        }
        else if (type == "error")
        {
            messageClass = "message-error";
        }
        else if (type == "warning")
        {
            messageClass = "message-warning";
        }

        StateHasChanged();
    }
