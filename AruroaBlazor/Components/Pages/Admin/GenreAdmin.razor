@page "/adminDashboard/manageGenres"
@using Models
@using DBL
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject ProtectedSessionStorage Storage
@inject NavigationManager Nav

<div class="admin-container">
    <div class="admin-header">
        <h2>Genre Administration</h2>
        <p class="admin-subtitle">Manage music genres for the platform</p>
    </div>

    @if (user == null)
    {
        <div class="alert alert-warning">
            <p>You must be logged in to view this page.</p>
            <button class="btn btn-primary" @onclick="GoToLogin">Go to Login</button>
        </div>
    }
    else if (user.IsAdmin == 0)
    {
        <div class="alert alert-danger">
            <p>You do not have permission to view this page.</p>
            <p>This area is restricted to administrators only.</p>
        </div>
    }
    else
    {
        <!-- Add Genre Section -->
        <div class="admin-section">
            <h3>Add New Genre</h3>

            <div class="form-group">
                <input type="text"
                       class="form-input"
                       placeholder="Enter genre name (e.g., Rock, Jazz, Pop)"
                       @bind="newGenreName"
                       @onkeypress="HandleKeyPress"
                       disabled="@isSaving" />

                <button class="btn btn-primary"
                        @onclick="AddGenre"
                        disabled="@isSaving">
                    @if (isSaving)
                    {
                        <span>Adding...</span>
                    }
                    else
                    {
                        <span>Add Genre</span>
                    }
                </button>
            </div>

            @if (string.IsNullOrEmpty(message) == false)
            {
                <div class="message @messageClass">
                    @message
                </div>
            }
        </div>

        <hr class="divider" />

        <!-- Existing Genres Section -->
        <div class="admin-section">
            <div class="section-header">
                <h3>Existing Genres (@genres.Count)</h3>
                @if (genres.Count > 0)
                {
                    <button class="btn btn-secondary btn-small" @onclick="LoadGenres">
                        Refresh
                    </button>
                }
            </div>

            @if (isLoading)
            {
                <div class="loading-message">
                    <p>Loading genres...</p>
                </div>
            }
            else if (genres.Count == 0)
            {
                <div class="empty-state">
                    <p>No genres found.</p>
                    <p class="empty-hint">Add your first genre above to get started!</p>
                </div>
            }
            else
            {
                <div class="genres-grid">
                    @for (int i = 0; i < genres.Count; i++)
                    {
                        int index = i;
                        Genre currentGenre = genres[index];

                        <div class="genre-card">
                            <div class="genre-info">
                                <span class="genre-name">@currentGenre.name</span>
                                <span class="genre-id">ID: @currentGenre.genreid</span>
                            </div>

                            <div class="genre-actions">
                                <button class="btn btn-danger btn-small"
                                        @onclick="() => ConfirmDelete(currentGenre)"
                                        disabled="@isDeleting">
                                    Delete
                                </button>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>

        <!-- Delete Confirmation Modal -->
        @if (genreToDelete != null)
        {
            <div class="modal-overlay" @onclick="CancelDelete">
                <div class="modal-content" @onclick:stopPropagation="true">
                    <h3>Confirm Delete</h3>
                    <p>Are you sure you want to delete the genre <strong>"@genreToDelete.name"</strong>?</p>
                    <p class="warning-text">This action cannot be undone!</p>

                    <div class="modal-actions">
                        <button class="btn btn-secondary" @onclick="CancelDelete">
                            Cancel
                        </button>
                        <button class="btn btn-danger" @onclick="DeleteGenre">
                            Delete
                        </button>
                    </div>
                </div>
            </div>
        }
    }
</div>

