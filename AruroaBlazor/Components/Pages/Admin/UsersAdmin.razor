@page "/adminDashboard/manageUsers"

@using Models
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@using Services
@inject ProtectedSessionStorage Storage
@inject NavigationManager Nav

@if (user == null)
{
    <p>You must be logged in as an admin to view this page.</p>
}
else if (user.IsAdmin == 0)
{
    <p>You do not have permission to view this page.</p>
}
else
{
    <div class="admin-page">
        <h2>Users Administration</h2>

        @if (!string.IsNullOrEmpty(message))
        {
            <div class="message">
                @message
            </div>
        }

        <table class="users-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Is Admin</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < users.Count; i++)
                {
                    int currentIndex = i;
                    <tr>
                        <td>@users[currentIndex].userid</td>
                        <td>@users[currentIndex].username</td>
                        <td>@users[currentIndex].email</td>
                        <td>
                            @if (users[currentIndex].IsAdmin == 1)
                            {
                                @:Yes
                            }
                            else
                            {
                                @:No
                            }
                        </td>
                        <td>
                            <button @onclick="() => ToggleAdminByIndex(currentIndex)">Toggle Admin</button>
                            <button @onclick="() => DeleteUserByIndex(currentIndex)">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    // Service instance
    private UserAdminService userService = new UserAdminService();

    // UI state variables
    private User user = null;
    private List<User> users = new List<User>();
    private string message = "";

    // Lifecycle method - loads data on first render
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender == false)
        {
            return;
        }

        var result = await Storage.GetAsync<User>("user");
        if (result.Success)
        {
            user = result.Value;
            if (user.IsAdmin == 1)
            {
                await LoadUsers();
            }
            StateHasChanged();
        }
    }

    // Load all users from database using service
    private async Task LoadUsers()
    {
        users = await userService.LoadAllUsersAsync();
        if (users.Count == 0)
        {
            message = "Error loading users";
        }
    }

    // Delete a user by index using service
    private async Task DeleteUserByIndex(int index)
    {
        // Get user by index using service
        User targetUser = userService.GetUserByIndex(index, users);

        // Validate deletion using service
        string validationError = userService.ValidateUserDeletion(targetUser, user);
        if (validationError != null)
        {
            message = validationError;
            return;
        }

        bool confirmed = await ConfirmAsync("Are you sure you want to delete this user?");
        if (confirmed == false)
        {
            return;
        }

        // Delete user using service
        bool success = await userService.DeleteUserAsync(targetUser.userid);
        if (success)
        {
            message = "User deleted successfully.";
            await LoadUsers();
        }
        else
        {
            message = "Error deleting user.";
        }
    }

    // Toggle admin status by index using service
    private async Task ToggleAdminByIndex(int index)
    {
        // Get user by index using service
        User selectedUser = userService.GetUserByIndex(index, users);

        // Validate toggle using service
        string validationError = userService.ValidateAdminToggle(selectedUser, user);
        if (validationError != null)
        {
            message = validationError;
            return;
        }

        // Toggle admin status using service
        bool success = await userService.ToggleAdminStatusAsync(selectedUser);
        if (success)
        {
            await LoadUsers();
            message = "User admin status updated successfully.";
        }
        else
        {
            message = "Error updating user.";
        }
    }

    // Simple confirmation helper (always returns true for now)
    private async Task<bool> ConfirmAsync(string text)
    {
        return true;
    }
}